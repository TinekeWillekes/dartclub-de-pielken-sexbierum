<td><%= player.id %></td>
<td><%= link_to player.name, player %></td>
<% if user_signed_in? && current_user.id == 1 %>
<td><%= link_to("", edit_player_path(:id => player.id), class: "glyphicon glyphicon-pencil") %>
    <%= link_to "", player, method: :delete, class: "glyphicon glyphicon-trash",
                                  data: { confirm: "Are you sure you want to delete this player?" } %></td>
<% else %>
<% end %>