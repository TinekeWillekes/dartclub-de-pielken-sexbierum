<div class="container">
  <div class="row">
    <h3>New game</h3><p><%= back_to(:games) %></p>
    <div class="col-lg-12">
    <div class="authform">
    <%= form_for(@game) do |f| %>
        <% if @game.errors.any? %>
        <div id="error_explanation">

          <h2><%= pluralize(@game.errors.count, "error") %> prohibited this form from being saved:</h2>

          <ul>
            <% @game.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :game_date, :class => 'datepicker', class: 'form-control' %>
    </div>
    
    <%= f.fields_for :results, Result.new do |result| %>
    <div class="form-group">   
      <%= result.collection_select(:player_id, @players, :id, :name, prompt: "Home player" ) %>
    </div>
    
    <div class="form-group">
      <%= result.label :place, "If home player check box" %>
      <%= result.check_box :place %>
    </div>
    
    <div class="form-group">
      <%= result.label :game_points %>
      <%= result.text_field :game_points , class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= result.label :legs_pro %>
      <%= result.text_field :legs_pro , class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= result.label :legs_contra %>
      <%= result.text_field :legs_contra , class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= result.label :average %>
      <%= result.text_field :average , class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= result.label :hs %>
      <%= result.text_field :hs , class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= result.label :co %>
      <%= result.text_field :co , class: 'form-control' %>
    </div>
    
    <%= f.fields_for :results, Result.new do |result| %>
    <div class="form-group">  
      <%= result.collection_select(:player_id, @players, :id, :name, prompt: "Away player") %>
    </div> 
    
    <div class="form-group">
      <%= result.label :place, "If away player don't check box" %>
      <%= result.check_box :place %>
    </div>
    
    <div class="form-group">
      <%= result.label :game_points %>
      <%= result.text_field :game_points , class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= result.label :legs_pro %>
      <%= result.text_field :legs_pro, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= result.label :legs_contra %>
      <%= result.text_field :legs_contra, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= result.label :average %>
      <%= result.text_field :average, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= result.label :hs %>
      <%= result.text_field :hs, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= result.label :co %>
      <%= result.text_field :co, class: 'form-control' %>
    </div>
    

      <%= f.submit "Create new game", class: "btn btn-primary" %>
    <% end %>
    <% end %>
    <% end %>
    </div>
    </div>
  </div>
</div>