<div class="container">
  <div class="row">
    <h3>New game</h3><p><%= back_to(:games) %></p>

    <%= form_for(@game) do |f| %>
    
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :game_date, :class => 'datepicker' %>
    </div>
    
    <%= f.fields_for :results, Result.new do |result| %>
    <div class="form-group">   
      <%= result.collection_select(:player_id, @players, :id, :name, prompt: "Pick a home player") %>
    </div>
    
    <div class="form-group">
      <%= result.label :place, "If home player check box" %>
      <%= result.check_box :place %>
    </div>
    
    <div class="form-group">
      <%= result.label :legs_pro %>
      <%= result.text_field :legs_pro %>
    </div>
    
    <div class="form-group">
      <%= result.label :legs_contra %>
      <%= result.text_field :legs_contra %>
    </div>
    
    <div class="form-group">
      <%= result.label :average %>
      <%= result.text_field :average %>
    </div>
    
    <div class="form-group">
      <%= result.label :hs %>
      <%= result.text_field :hs %>
    </div>
    
    <div class="form-group">
      <%= result.label :co %>
      <%= result.text_field :co %>
    </div>
    
    <%= f.fields_for :results, Result.new do |result| %>
    <div class="form-group">   
      <%= result.collection_select(:player_id, @players, :id, :name, prompt: "Pick a away player") %>
    </div> 
    
    <div class="form-group">
      <%= result.label :place, "If away player don't check box" %>
      <%= result.check_box :place %>
    </div>

    <div class="form-group">
      <%= result.label :legs_pro %>
      <%= result.text_field :legs_pro %>
    </div>
    
    <div class="form-group">
      <%= result.label :legs_contra %>
      <%= result.text_field :legs_contra %>
    </div>
    
    <div class="form-group">
      <%= result.label :average %>
      <%= result.text_field :average %>
    </div>
    
    <div class="form-group">
      <%= result.label :hs %>
      <%= result.text_field :hs %>
    </div>
    
    <div class="form-group">
      <%= result.label :co %>
      <%= result.text_field :co %>
    </div>
    

      <%= f.submit "Create new game", class: "btn btn-primary" %>
    <% end %>
    <% end %>
    <% end %>
  </div>
</div>